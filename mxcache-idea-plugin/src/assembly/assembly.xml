<assembly>
    <id>idea-plugin</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>jar</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <unpack>true</unpack>
            <useProjectArtifact>true</useProjectArtifact>
            <includes>
                <include>commons-io:commons-io</include>
                <include>javax.xml.bind:jaxb-api</include>
                <include>javax.activation:activation</include>
                <include>com.maxifier.mxcache:mxcache-asm</include>
                <include>com.maxifier.mxcache:mxcache-runtime</include>
                <include>com.maxifier.mxcache:mxcache-idea-plugin</include>
                <include>com.maxifier.mxcache:mxcache-instrumentator</include>
                <include>com.google.code.findbugs:jsr305</include>
                <include>net.sf.trove4j:trove4j</include>
            </includes>
            <useStrictFiltering>true</useStrictFiltering>
        </dependencySet>
    </dependencySets>
</assembly>
